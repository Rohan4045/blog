<center><h1><u>Listing Articles</u></h1></br>
</hr bgcolor="red">
<h3>New Blog
<%= link_to 'click here', new_article_path%></h3>
<table border="" cellpadding="0" cellspacing="0" bgcolor="yellow" bordercolor="green">
<tr>
<th>Title</th>
<th>text</th>
<th colspan="3"></th>
</tr>
<% @articles.each do |article| %>
<tr>
<td><%=article.title %></td>
<td><%= article.text %></td>
<td><%= link_to 'show', article_path(article) %></td>
<td><%= link_to 'edit', edit_article_path(article) %></td>
<td><%= link_to 'delete', article_path(article),method: :delete,data: { confirm: 'are you sure?'}%>
</tr>
<%end%>
</table>
